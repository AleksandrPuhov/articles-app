{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,

    // параметр исходных файлов
    "module": "ESNext",

    // параметр итоговых файлов
    "target": "es5",

    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@pages/*": ["./src/pages/*"],
      "@shared/*": ["./src/shared/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@entities/*": ["./src/entities/*"],
      "@features/*": ["./src/features/*"],
    },

    // параметры для webpack.config.ts
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
}

{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,

    // параметр исходных файлов
    "module": "ESNext",

    // параметр итоговых файлов
    "target": "es5",

    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",

    // параметры для webpack.config.ts
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
